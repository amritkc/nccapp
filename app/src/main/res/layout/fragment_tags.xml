<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tagsFragment"
    android:background="@color/whitecolor">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="@drawable/quizheader"
    android:id="@+id/header"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NccStory Quiz"
        android:id="@+id/textfirst"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#8A63E5"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textsecond"
        android:layout_below="@id/textfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This Quiz is helpful for Ncc A,B,C Certificate and For CDS Examination,Answer is also Provided"
        android:textSize="15sp"
        android:textColor="#8A63E5"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imgquiz"
        android:src="@drawable/graphic"
        android:layout_below="@+id/textsecond"/>

    <RelativeLayout
        android:layout_below="@id/imgquiz"
        android:layout_width="match_parent"
        android:id="@+id/quiz"
        android:background="@drawable/playquizicon"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/starticon"
            android:layout_marginTop="34dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@drawable/startbutton" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/starticon"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#8A63E5"
            android:text="Start Quiz"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="NccStory Lesson"
        android:textStyle="bold"
        android:layout_below="@+id/quiz"
        android:id="@+id/ncclessontext"
        android:textSize="25sp"
        android:textColor="#8A63E5"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textsecondlesson"
        android:layout_below="@id/ncclessontext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We have Updated the important Question which is helpful for A,B,C Certificate Examination"
        android:textSize="15sp"
        android:textColor="#8A63E5"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        android:id="@+id/lessonimg"
        android:src="@drawable/content"
        android:layout_below="@+id/textsecondlesson"/>
    <RelativeLayout
        android:layout_below="@id/lessonimg"
        android:layout_width="match_parent"
        android:id="@+id/learn"
        android:background="@drawable/lesson"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/starticon2"
            android:layout_marginTop="34dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@drawable/startbutton" />
        <TextView
            android:layout_below="@+id/starticon2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#6D63EF"
            android:text="Start Lesson"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="130dp"
    android:layout_below="@+id/lessonimg"
    android:layout_width="match_parent"
    android:layout_height="400dp">

</RelativeLayout>
