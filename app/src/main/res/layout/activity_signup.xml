<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/sUpper"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="280dp">
            <TextView
                android:id="@+id/sSignupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/baloo"
                android:text="Sign Up"
                android:textColor="@color/whitecolor"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/sSignupText2"
                android:layout_below="@+id/sSignupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:fontFamily="@font/actor"
                android:text="Create A free Account in \n NccStory app"
                android:textColor="@color/whitecolor"
                android:textSize="20sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="-100dp"
            android:id="@+id/sRec"
            android:background="@drawable/srec"
            android:layout_below="@+id/sUpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
            android:layout_marginTop="50dp"
            android:textColorHint="@color/colorPrimary"
            android:id="@+id/sUsername"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:hint="Username"
            android:background="@drawable/susername"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="30dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_below="@+id/sUsername"
            android:id="@+id/sEmail"
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:hint="Email"
            android:background="@drawable/semail"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="30dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_below="@+id/sEmail"
            android:id="@+id/sPassword1"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:hint="Password"
            android:background="@drawable/spassword"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="30dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_below="@+id/sPassword1"
            android:id="@+id/sPassword2"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:hint="Re-type Password"
            android:background="@drawable/spassword"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="55dp"
                android:id="@+id/sTerms"
                android:layout_below="@+id/sPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:fontFamily="@font/actor"
                android:text="By pressing “submit” you agree to our"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sTerms2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sTerms"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/actor"
                android:gravity="center"
                android:text="terms &amp; conditions"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        <Button
            android:layout_marginTop="65dp"
            android:id="@+id/sSignup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/sTerms2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ssumit"
            android:fontFamily="@font/cantata_one"
            android:text="Submit"
            android:textColor="@color/whitecolor" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/sRec"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
    </RelativeLayout>
</ScrollView>