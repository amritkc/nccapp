<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RelativeHeader"
    android:background="@color/whitecolor"
    android:orientation="vertical">
<RelativeLayout
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="120dp">

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/revp"
        android:background="@drawable/srec"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/uUserdp"
                android:layout_marginLeft="30dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/soldier" />

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/uUsername"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/actor"
                android:text="Noobie"
                android:textColor="@color/colorPrimary" />
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/veriffied"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="95dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/uLv"
            android:textSize="15dp"
            android:layout_marginBottom="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:text="level 1"
            android:textColor="@color/black_overlay" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/hQuiz"
        android:background="@drawable/headerdraw"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/revp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:background="@drawable/ic_quiz"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/abeezee"
            android:text="Play Quiz\n ->"
            android:textColor="#DC6200EA"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hInstagram"
        android:background="@drawable/headerdraw2"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hQuiz"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:background="@mipmap/instagrampng"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/abeezee"
            android:text="Open Instagram"
            android:textColor="#DC6200EA"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>