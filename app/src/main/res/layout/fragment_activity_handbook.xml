<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitecolor"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activityhandbook">
<RelativeLayout
    android:id="@+id/homeforall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pathheader"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/header"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/pathheader"
            android:id="@+id/textrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ncc Ranks"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/colorPrimary" />
        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/hori2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textrank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

            <ImageSwitcher
                android:id="@+id/rankarmy"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/roundedbuttoncircle"
                android:foreground="@drawable/army" />

            <ImageSwitcher
                android:id="@+id/rankairforce"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/roundedbuttoncircle"
                android:foreground="@drawable/airforce" />

            <ImageSwitcher
                android:id="@+id/ranknavy"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/roundedbuttoncircle"
                android:foreground="@drawable/navy" />

        </LinearLayout>
        </HorizontalScrollView>
    <RelativeLayout
        android:layout_below="@+id/hori2"
        android:id="@+id/youtubeads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="Ads:"
            android:textSize="15sp"
            android:id="@+id/ads"
            android:textColor="#3E3B3B"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/youtubeclick"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/ads"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:background="@drawable/youtube"
            android:layout_height="80dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/books"
        android:layout_below="@+id/youtubeads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/texthandbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ncc HandBook"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/colorPrimary" />
        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/hori3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/texthandbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <ImageSwitcher
                    android:id="@+id/armypfaf1"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/handbookhome" />

                <ImageSwitcher
                    android:id="@+id/button3"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/handbookhome2" />

                <ImageSwitcher
                    android:id="@+id/button4"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/handbookhome3" />

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/books"
    android:layout_height="120dp"/>

</RelativeLayout>

</ScrollView>